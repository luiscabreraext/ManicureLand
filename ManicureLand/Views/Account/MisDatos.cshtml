    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-success" value="Volver" onclick="@("window.location.href='" + @Url.Action("PanelCliente", "Account") + "'");" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12 center-block" id="messageModal" style="display:none">
            <p align="center">@ViewBag.Message</p>
        </div>
    </div>

</div>
